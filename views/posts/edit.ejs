<% include ../partials/header%>
<div id ="it-new">
	<div class="container">
		<div class="col-md-12">
		    <div class="form-area">  
		        <form role="form" action="/it_forum/<%= student._id %>?_method=PUT" method="POST">
		            <h1>Edit Page!</h1>
		    		<div class="form-group">
						<input type="text" class="form-control" id="name" name="student[name]" value="<%= student.name %>"  required>
					</div>
					<div class="form-group">
						<input type="text" class="form-control" id="email" name="student[email]" value="<%= student.email %>" required>
					</div>
					<div class="form-group">
						<input type="id" class="form-control" id="mobile" name="student[id]" value="<%= student.id %>"  required>
					</div>
						
		            <div class="form-group">
		                <textarea class="form-control" type="textarea" name="student[question]" maxlength="140" rows="1"><%= student.question %> </textarea>
		                                 
		            </div>

		             <div class="form-group">
		                <textarea class="form-control" type="textarea" name="student[description]"  maxlength="500" rows="7"><%= student.description %></textarea>
		                                 
		            </div>
		            
		        	 <div class="form-group">
                    	<button class="btn btn-lg btn-primary btn-block">Submit</button>
                	</div>
		        </form>
		    </div>
		</div>
	</div>
</div>



<% include ../partials/footer%>