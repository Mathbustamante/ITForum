<% include ../partials/header%>
<div id ="it-new">
	<div class="container">
		<div class="col-md-12">
		    <div class="form-area">  
		        <form role="form" action="/it_forum" method="POST">
		            <h1>Ask us!</h1>
		            <div class="show-none">
			    		<div class="form-group">
							<input type="text" class="form-control" id="name" name="student[name]" placeholder="Name" >
						</div>
						<div class="form-group">
							<input type="text" class="form-control" id="email" name="student[email]" placeholder="Email" >
						</div>
						<div class="form-group">
							<input type="id" class="form-control" id="mobile" name="student[id]" placeholder="Student ID" >
						</div>
					</div>
						
		            <div class="form-group">
		                <textarea class="form-control" type="textarea" name="student[question]" placeholder="Problem" maxlength="140" rows="1"></textarea>
		                                 
		            </div>

		             <div class="form-group">
		                <textarea class="form-control" type="textarea" name="student[description]" placeholder="Description" maxlength="500" rows="7"></textarea>
		                                 
		            </div>
		            
		        	 <div class="form-group">
                    	<button class="btn btn-lg btn-primary btn-block">Submit</button>
                	</div>
		        </form>
		    </div>
		</div>
	</div>
</div>



<% include ../partials/footer%>