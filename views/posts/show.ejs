<% include ../partials/header %>

<div id="show">
    <div class="container">
            <div class="col-md-12">
                <div class="problem-box">
                    <div class="caption-full">
                        <h4 class="pull-right"></h4>
                        <h4><a class="question"><%=student.question%></a></h4>
                        <p class="description"><%= student.description %></p>
                        <p>
                            <em>Submitted By <%= student.author.username %></em>
                        </p>
                        
                        <div class="button">
                        <% if(currentUser && student.author.id.equals(currentUser._id)){ %>
                            <a class="btn btn-primary" href="/it_forum/<%= student._id %>/edit" role="button">Edit this post</a>                
                            <form id="delete" action="/it_forum/<%= student._id %>?_method=DELETE" method="POST">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        <% }%>
                        </div>
                    </div>
                </div>
                <div class="well">
                    <div class="text-right">
                        <a class="btn btn-success" href="/it_forum/<%= student._id %>/comments/new">Add New Comment</a>
                    </div>
                    <hr>
                    <% student.comments.forEach(function(comment){ %>
                        <div class="row">
                            <div class="col-md-12">
                                <strong><%= comment.author.username %></strong>
                                <span class="pull-right"><span><%= student.created.toDateString() %></span><span>        <%= student.created.toLocaleTimeString('en-US') %></span></span>
                                <p>
                                    <%= comment.text %> 
                                </p>
                                 <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                                    <a class="btn btn-xs btn-primary" 
                                       href="/it_forum/<%=student._id %>/comments/<%=comment._id %>/edit">Edit</a>
                                    <form id="delete-form" action="/it_forum/<%=student._id %>/comments/<%=comment._id %>?_method=DELETE" method="POST">
                                        <input type="submit" class="btn btn-xs btn-primary" value="Delete">
                                    </form>
                                <% }%>
                            </div>
                        </div>
                    <% }) %>
                </div>
                
                 <a href="/it_forum">Go Back</a>
            </div>

    </div>
</div>
<% include ../partials/footer %>

