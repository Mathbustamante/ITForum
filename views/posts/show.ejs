<% include ../partials/header %>


<div class="container">

<div class="col-md-12">
            <div class="thumbnail">
                <div class="caption-full">
                    <h4 class="pull-right"></h4>
                    <h4><a><%=student.question%></a></h4>
                    <p><%= student.description %></p>
                    <p>
                        <em>Submitted By <%= student.author.username %></em>
                    </p>
                    <h4><a><%=currentUser%></a></h4>
                    <div class="buttons">
                    
                        <span><a class="btn btn-primary" href="/it_forum/<%= student._id %>/edit" role="button">Edit this post</a></span>
            
                        <span>
                            <form id="delete" action="/it_forum/<%= student._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                             </form>
                  
                        </span>
                    </div>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/it_forum/<%= student._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% student.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text %> 
                            </p>
                             
                                <a class="btn btn-xs btn-warning" 
                                   href="/it_forum/<%=student._id %>/comments/<%=comment._id %>/edit">Edit</a>
                                <form id="delete-form" action="/it_forum/<%=student._id %>/comments/<%=comment._id %>?_method=DELETE" method="POST">
                                    <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                                </form>
                        
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>

<% include ../partials/footer %>

