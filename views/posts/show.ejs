<% include ../partials/header %>


<div class="container">

<div class="col-md-12">
            <div class="thumbnail">
                <div class="caption-full">
                    <h4 class="pull-right"></h4>
                    <h4><a><%=student.question%></a></h4>
                    <p><%= student.description %></p>
                    <p>
                        <em>Submitted By <%= student.author.username %></em>
                    </p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/it_forum/<%= student._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% student.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text %> 
                            </p>
                           
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>

<% include ../partials/footer %>

